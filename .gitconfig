[user]
	name = Jan Sandbrink
	email = nobodysnightmare@gmail.com
[push]
	default = simple
	autoSetupRemote = true
[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = nano
[rerere]
	enabled = true
[alias]
  co = checkout
  cr = rebase --continue
  pf = push --force-with-lease
	sw = switch
[help]
	autocorrect = prompt
[commit]
	verbose = true

[includeIf "gitdir:~/development/work/"]
  path = ~/.dotfiles/gitconfig/work
[includeIf "gitdir:~/development/private/"]
  path = ~/.dotfiles/gitconfig/private
[init]
	defaultBranch = main
[pull]
	ff = only
[fetch]
	prune = true
[rebase]
	autosquash = true
[diff]
	algorithm = histogram
